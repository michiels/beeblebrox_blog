<div class="beeblebrox">
  <div class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      
      <h1><%= link_to post['title'], post_path(post['id'].to_i) %></h1>
      <div class="published_at">
        <%= l(DateTime.parse(post['published_at']), :format => :short) %>
      </div>
      <div class="post_meta">
        <div class="author">
          <%= image_tag "http://www.gravatar.com/avatar/#{post['author']['email_md5']}.jpg?s=50", :class => "avatar"%>
          <div class="name"><%= post['author']['full_name'] %></div>
        </div>
      </div>
      <div class="post_body">
        <%= post['content'].html_safe %>
      </div>
    </div>
  <% end %>
  </div>
</div>